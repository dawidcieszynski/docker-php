#!/bin/bash
set -e

# Note: we don't just use "apache2ctl" here because it itself is just a shell-script wrapper around apache2 which provides extra functionality like "apache2ctl start" for launching apache2 in the background.
# (also, when run as "apache2ctl <apache args>", it does not use "exec", which leaves an undesirable resident shell process)

: "${APACHE_CONFDIR:=/etc/apache2}"
: "${APACHE_ENVVARS:=$APACHE_CONFDIR/envvars}"
if test -f "$APACHE_ENVVARS"; then
	. "$APACHE_ENVVARS"
fi

# Apache gets grumpy about PID files pre-existing
: "${APACHE_PID_FILE:=${APACHE_RUN_DIR:=/var/run/apache2}/apache2.pid}"
rm -f "$APACHE_PID_FILE"

# Setup SSL
if [[ ! -f /etc/ssl/private/local-dev.crt ]] ; then
	if [[ ! -f /certconf/rootCA.key ]] ; then
		echo "Generating root CA"
		openssl genrsa -out /certconf/rootCA.key 2048
		openssl req -x509 -new -nodes -key /certconf/rootCA.key -sha256 -days 36500 -out /certconf/rootCA.pem -config /certconf/rootCA.conf
	fi
	
	# You can change the key settings in local-dev.conf
	echo "Creating server certificate"
	openssl genrsa -out /etc/ssl/private/local-dev.key 2048
	openssl req -new -key /etc/ssl/private/local-dev.key -out /certconf/local-dev.csr -config /certconf/local-dev.conf
	openssl x509 -req -in /certconf/local-dev.csr -CA /certconf/rootCA.pem -CAkey /certconf/rootCA.key -CAcreateserial -out /etc/ssl/private/local-dev.crt -days 36500 -sha256 -extensions v3_req -extfile /certconf/local-dev.conf
fi

exec apache2 -DFOREGROUND "$@"